<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hxd.dao.NewsDao">
    <insert id="add" parameterType="News">
        insert into news(id,name,sort) values (null,#{name},#{sort})
    </insert>

    <update id="edit" parameterType="News">
        update news set name = #{name} , sort = #{sort} where id = #{id}
    </update>

    <delete id="delete" parameterType="Long">
        delete from news where id = #{id};
    </delete>

    <select id="findList" resultType="News">
        select * from news
        <if test="name != null">
            where name like '%${name}%'
        </if>
        order by sort asc
    </select>
</mapper>